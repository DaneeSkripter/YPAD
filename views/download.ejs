<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YPAD | Downloading...</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.7/tailwind.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
</head>
<body class="bg-gray-800">
    <div class="flex flex-col items-center justify-center h-screen w-screen">
        <h1 class="text-white text-2xl font-sans font-bold">YouTube Playlist Audio Downloader</h1>
        <div id="status" class="text-white sans text-center">
            <p>Downloading audio files from YouTube</p>
        </div>
        <form action="/" class="mt-16">
            <button class="bg-gray-600 text-white w-36 h-12 rounded-2xl duration-300 hover:bg-gray-500" type="submit">Back to home</button>
        </form>
    </div>
    <script>
        const socket = io('https://ypad.daneeskripter.dev/');
      
        socket.on('status', (data) => {
        const statusElement = document.getElementById('status');
  
        const messageElement = document.createElement('p');
        messageElement.innerHTML = data;

        statusElement.appendChild(messageElement);

        statusElement.scrollTop = statusElement.scrollHeight;
});
      </script>
</body>
</html>